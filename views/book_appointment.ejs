<%- include('partials/header', { activePage: 'doctors' }) %>

<div class="row g-4">
  <div class="col-md-7">
    <div class="card border-0 shadow-sm">
      <div class="card-body p-4">
        <h4 class="mb-2">Book Appointment</h4>
        <p class="small text-muted mb-4">
          with <strong><%= doctor.name %></strong>, <%= doctor.specialty_name %>
        </p>

        <!-- Date choose karne ka GET form (slots reload honge) -->
        <form method="GET" class="mb-3">
          <label class="form-label small">Appointment Date</label>
          <input
            type="date"
            name="date"
            class="form-control rounded-3"
            required
            value="<%= selectedDate %>"
            min="<%= new Date().toISOString().slice(0,10) %>"
            onchange="this.form.submit()"
          />
          <small class="text-muted">Change date to see available time slots.</small>
        </form>

        <!-- Actual booking POST form -->
        <form method="POST">
          <input type="hidden" name="appointment_date" value="<%= selectedDate %>">

          <div class="mb-3">
            <label class="form-label small d-block mb-2">Available Time Slots</label>

                  <% if (holiday) { %>
                    <div class="alert alert-warning small">
                      <i class="bi bi-exclamation-triangle me-1"></i>
                      Clinic is closed on <strong><%= formatDate(holiday.holiday_date) %></strong>
                      <% if (holiday.reason) { %>
                        (Reason: <%= holiday.reason %>)
                      <% } %>
                    </div>
                    <p class="small text-muted mb-0">
                      Please select another date to see available time slots.
                    </p>
                  <% } else if (!slots.length) { %>
                    <p class="small text-muted mb-0">
                      No slots generated for this date or doctor availability is not set correctly.
                    </p>
                  <% } else { %>
                    <!-- yahan slots loop jo pehle se hai, wahi rehne do -->
                    <div class="d-flex flex-wrap gap-2">
                      <% slots.forEach(function(slot, idx) {
                          const slotId = 'slot-' + idx;
                      %>
                        <% if (slot.isBooked) { %>
                          <input
                            type="radio"
                            class="btn-check"
                            name="appointment_time"
                            id="<%= slotId %>"
                            value="<%= slot.value %>"
                            disabled
                            autocomplete="off"
                          />
                          <label class="btn btn-sm btn-outline-secondary rounded-pill disabled" for="<%= slotId %>">
                            <%= slot.label %> <span class="small text-muted">(booked)</span>
                          </label>
                        <% } else { %>
                          <input
                            type="radio"
                            class="btn-check"
                            name="appointment_time"
                            id="<%= slotId %>"
                            value="<%= slot.value %>"
                            autocomplete="off"
                            required
                          />
                          <label class="btn btn-sm btn-outline-primary rounded-pill" for="<%= slotId %>">
                            <%= slot.label %>
                          </label>
                        <% } %>
                      <% }) %>
                    </div>
                    <small class="text-muted d-block mt-2">
                      Slots marked as "booked" are already reserved by other patients.
                    </small>
                  <% } %>
          </div>

          <div class="d-flex flex-wrap gap-2 mt-3">
            <button type="submit" class="btn btn-primary rounded-pill">
              <i class="bi bi-check2-circle me-1"></i> Confirm Booking
            </button>
            <a href="/doctors/<%= doctor.id %>" class="btn btn-outline-secondary rounded-pill">
              Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="col-md-5">
    <div class="card border-0 shadow-sm">
      <div class="card-body p-4">
        <h6 class="fw-semibold mb-3">Doctor Summary</h6>
        <div class="d-flex align-items-center mb-3">
          <div class="avatar-wrapper me-3">
            <% if (doctor.photo) { %>
              <div class="avatar-circle">
                <img src="/uploads/doctors/<%= doctor.photo %>" alt="<%= doctor.name %>" class="avatar-img">
              </div>
            <% } else { %>
              <div class="avatar-circle bg-primary-subtle text-primary">
                <span><%= doctor.name.charAt(0) %></span>
              </div>
            <% } %>
          </div>
          <div>
            <div class="fw-semibold"><%= doctor.name %></div>
            <div class="small text-muted"><%= doctor.specialty_name %></div>
          </div>
        </div>
        <p class="small text-muted mb-2">
          <i class="bi bi-briefcase me-1"></i>
          <strong><%= doctor.experience_years %> years</strong> experience
        </p>
        <p class="small text-muted mb-2">
          <i class="bi bi-currency-rupee me-1"></i>
          Fee: <strong>₹<%= doctor.fee %></strong>
        </p>
        <p class="small text-muted mb-2">
          <i class="bi bi-clock me-1"></i>
          Available:
          <strong><%= doctor.available_from.toString().slice(0,5) %></strong> –
          <strong><%= doctor.available_to.toString().slice(0,5) %></strong>
        </p>
        <p class="small text-muted">
          <i class="bi bi-info-circle me-1"></i>
          You will receive confirmation once the clinic approves your slot.
        </p>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>