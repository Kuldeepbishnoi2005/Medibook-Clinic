<%- include('partials/header') %>

<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card border-0 shadow-sm auth-card">
      <div class="card-body p-4 p-md-5">
        <div class="text-center mb-4">
          <div class="avatar-circle bg-info-subtle text-info mb-2">
            <i class="bi bi-envelope-open"></i>
          </div>
          <h4 class="mb-1">Forgot password</h4>
          <p class="small text-muted mb-0">
            Enter your registered email to receive a reset code.
          </p>
        </div>

        <form method="POST" action="/forgot-password">
          <div class="mb-3">
            <label class="form-label small">Email</label>
            <input
              type="email"
              name="email"
              class="form-control rounded-3"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary w-100 rounded-pill mt-2">
            Send reset code
          </button>
        </form>

        <p class="small text-center text-muted mt-3 mb-0">
          Remember your password? <a href="/login">Login here</a>
        </p>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>