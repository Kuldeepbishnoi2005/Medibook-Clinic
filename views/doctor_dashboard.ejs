<%- include('partials/header', { activePage: 'doctor-dashboard' }) %>

<% if (!currentDoctor) { %>
  <p class="text-muted">You are not logged in as a doctor.</p>
<% } else { %>

<div class="row g-3 g-md-4 mb-4 align-items-center">
  <!-- Left: Greeting + profile -->
  <div class="col-lg-8">
    <div class="card border-0 shadow-sm">
      <div class="card-body p-4">
        <div class="d-flex align-items-center">
          <div class="avatar-wrapper me-3">
            <% if (currentDoctor.photo) { %>
              <div class="avatar-circle avatar-lg">
                <img src="/uploads/doctors/<%= currentDoctor.photo %>" alt="<%= currentDoctor.name %>" class="avatar-img">
              </div>
            <% } else { %>
              <div class="avatar-circle avatar-lg bg-primary-subtle text-primary">
                <span><%= currentDoctor.name.charAt(0) %></span>
              </div>
            <% } %>
          </div>
          <div>
            <h3 class="mb-1">
              <%= timeGreeting %>, <%= currentDoctor.name %>
            </h3>
            <p class="small text-muted mb-0">
              Here's a quick overview of your schedule and patients today.
            </p>
          </div>
        </div>

        <hr class="my-3" />

        <div class="row g-3 small">
          <div class="col-md-4">
            <div class="d-flex align-items-center">
              <div class="stats-icon bg-primary-subtle text-primary me-2">
                <i class="bi bi-calendar-check"></i>
              </div>
              <div>
                <div class="text-muted">Total Appointments</div>
                <div class="fw-semibold fs-5"><%= stats.totalAppointments %></div>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="d-flex align-items-center">
              <div class="stats-icon bg-success-subtle text-success me-2">
                <i class="bi bi-clock-history"></i>
              </div>
              <div>
                <div class="text-muted">Upcoming</div>
                <div class="fw-semibold fs-5"><%= stats.upcomingCount %></div>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="d-flex align-items-center">
              <div class="stats-icon bg-warning-subtle text-warning me-2">
                <i class="bi bi-exclamation-circle"></i>
              </div>
              <div>
                <div class="text-muted">Pending</div>
                <div class="fw-semibold fs-5"><%= stats.pendingCount %></div>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-3 d-flex flex-wrap gap-2">
          <a href="/doctor/appointments" class="btn btn-primary btn-sm rounded-pill">
            <i class="bi bi-list-check me-1"></i> View All Appointments
          </a>
          <a href="/doctor/appointments?status=pending" class="btn btn-outline-warning btn-sm rounded-pill">
            <i class="bi bi-hourglass-split me-1"></i> Pending Only
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Right: today's quick info -->
  <div class="col-lg-4">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body p-4 small">
        <h6 class="fw-semibold mb-3">Today at a glance</h6>
        <p class="mb-2">
          <i class="bi bi-calendar2-date me-1 text-primary"></i>
          <strong><%= formatDate(new Date()) %></strong>
        </p>
        <ul class="list-unstyled mb-0">
          <li class="d-flex align-items-center mb-2">
            <i class="bi bi-person-video3 me-2 text-primary"></i>
            <span>Check your <a href="/doctor/appointments" class="fw-semibold">today's appointments</a></span>
          </li>
          <li class="d-flex align-items-center mb-2">
            <i class="bi bi-file-earmark-text me-2 text-success"></i>
            <span>Update notes &amp; prescriptions right after each visit</span>
          </li>
          <li class="d-flex align-items-center">
            <i class="bi bi-arrow-repeat me-2 text-info"></i>
            <span>Schedule follow-ups from the notes screen</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<h5 class="mb-2">Next Appointments</h5>
<div class="card border-0 shadow-sm">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover app-table mb-0">
        <thead>
          <tr>
            <th>Patient</th>
            <th>Date</th>
            <th>Time</th>
            <th>Status</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (!upcomingAppointments.length) { %>
          <tr>
            <td colspan="5" class="text-center py-3 small text-muted">No upcoming appointments.</td>
          </tr>
          <% } %>
          <% upcomingAppointments.forEach(function(a) { %>
          <tr>
            <td class="small"><%= a.user_name %></td>
            <td class="small"><%= formatDate(a.appointment_date) %></td>
            <td class="small"><%= formatTime(a.appointment_time) %></td>
            <td class="small"><%= a.status %></td>
            <td class="text-end small">
              <a href="/doctor/appointments/<%= a.id %>/notes" class="btn btn-sm btn-outline-primary rounded-pill me-1">
                Notes
              </a>
              <a href="/doctor/patients/<%= a.user_id %>/history" class="btn btn-sm btn-outline-secondary rounded-pill">
                History
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% } %>

<%- include('partials/footer') %>