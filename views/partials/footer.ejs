<script>
  /* yahan tumhara dark mode wala JS already hoga – ise same rehne do */
  (function() {
    const storageKey = 'medibook-theme';
    const classDark = 'theme-dark';

    function applyTheme(theme) {
      if (theme === 'dark') {
        document.documentElement.classList.add(classDark);
      } else {
        document.documentElement.classList.remove(classDark);
      }
      localStorage.setItem(storageKey, theme);

      const icon = document.getElementById('themeToggleIcon');
      if (icon) {
        icon.className = theme === 'dark' ? 'bi bi-sun' : 'bi bi-moon-stars';
      }
    }

    const saved = localStorage.getItem(storageKey);
    if (saved === 'dark' ||
        (!saved && window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
      applyTheme('dark');
    } else {
      applyTheme('light');
    }

    window.addEventListener('DOMContentLoaded', function() {
      const btn = document.getElementById('themeToggleBtn');
      if (btn) {
        btn.addEventListener('click', function() {
          const isDark = document.documentElement.classList.contains(classDark);
          applyTheme(isDark ? 'light' : 'dark');
        });
      }
    });
  })();
</script>

