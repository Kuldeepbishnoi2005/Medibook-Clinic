<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>MediBook - Doctor Appointment System</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <!-- Bootstrap core -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <!-- Bootstrap Icons -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    rel="stylesheet"
  />
  <!-- Custom styles -->
  <link href="/css/styles.css" rel="stylesheet" />
</head>
<body class="app-body">
<nav class="navbar navbar-expand-lg navbar-dark app-navbar sticky-top shadow-sm">
  <div class="container">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <span class="brand-icon d-inline-flex align-items-center justify-content-center me-2">
        <i class="bi bi-heart-pulse-fill"></i>
      </span>
      <span class="fw-bold">MediBook</span>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <!-- LEFT: main navigation -->
      <ul class="navbar-nav me-auto ms-lg-4">
        <!-- Home -->
        <li class="nav-item">
          <a class="nav-link <% if (typeof activePage !== 'undefined' && activePage === 'home') { %>active<% } %>"
             href="/">Home</a>
        </li>

        <!-- Doctors -->
        <li class="nav-item">
          <a class="nav-link <% if (typeof activePage !== 'undefined' && activePage === 'doctors') { %>active<% } %>"
             href="/doctors">Doctors</a>
        </li>

        <!-- Testimonials -->
        <li class="nav-item">
          <a class="nav-link <% if (typeof activePage !== 'undefined' && activePage === 'testimonials') { %>active<% } %>"
             href="/testimonials">Testimonials</a>
        </li>

        <!-- Patient-specific links (admin ke liye NAHI) -->
        <% if (currentUser && !isAdmin) { %>
        <li class="nav-item">
          <a class="nav-link <% if (typeof activePage !== 'undefined' && activePage === 'my-appointments') { %>active<% } %>"
             href="/my-appointments">My Appointments</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <% if (typeof activePage !== 'undefined' && activePage === 'favorites') { %>active<% } %>"
             href="/favorites">Favourite Doctors</a>
        </li>
        <% } %>

        <!-- Admin dropdown -->
        <% if (isAdmin) { %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle <% if (typeof activePage !== 'undefined' && activePage.startsWith('admin')) { %>active<% } %>"
             href="#" role="button" data-bs-toggle="dropdown">
            Admin
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/admin">Dashboard</a></li>
            <li><a class="dropdown-item" href="/admin/patients">Patients</a></li>
            <li><a class="dropdown-item" href="/admin/doctors">Doctors</a></li>
            <li><a class="dropdown-item" href="/admin/specialties">Specialties</a></li>
            <li><a class="dropdown-item" href="/admin/appointments">Appointments</a></li>
            <li><a class="dropdown-item" href="/admin/holidays">Holidays</a></li>
            <li><a class="dropdown-item" href="/admin/logs">Activity Logs</a></li>
            <!-- Agar testimonials ka admin page use karte ho to yeh add kar sakte ho -->
            <!-- <li><a class="dropdown-item" href="/admin/testimonials">Testimonials</a></li> -->
          </ul>
        </li>
        <% } %>

        <!-- Doctor panel dropdown (sirf doctor login ke liye) -->
        <% if (currentDoctor) { %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle <% if (typeof activePage !== 'undefined' && activePage.startsWith('doctor')) { %>active<% } %>"
             href="#" role="button" data-bs-toggle="dropdown">
            Doctor Panel
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/doctor/dashboard">Dashboard</a></li>
            <li><a class="dropdown-item" href="/doctor/appointments">Appointments</a></li>
          </ul>
        </li>
        <% } %>
      </ul>

      <!-- RIGHT: theme + logins -->
      <ul class="navbar-nav ms-auto align-items-center">
        <!-- Theme toggle -->
        <li class="nav-item me-2">
          <button type="button" class="btn btn-sm btn-outline-light rounded-pill theme-toggle-btn" id="themeToggleBtn">
            <i class="bi bi-moon-stars" id="themeToggleIcon"></i>
          </button>
        </li>

        <!-- Agar doctor login hai -->
        <% if (currentDoctor && !currentUser) { %>
          <li class="nav-item me-3 d-none d-lg-block">
            <span class="navbar-text small text-light">
              <span class="me-1 text-muted">Doctor:</span>
              <strong><%= currentDoctor.name %></strong>
            </span>
          </li>
          <li class="nav-item">
            <a class="btn btn-outline-light btn-sm rounded-pill" href="/logout">
              <i class="bi bi-box-arrow-right me-1"></i> Logout
            </a>
          </li>

        <!-- Agar patient/admin login hai -->
        <% } else if (currentUser) { %>
          <li class="nav-item me-3 d-none d-lg-block">
            <span class="navbar-text small text-light">
              <span class="me-1 text-muted">Logged in as</span>
              <strong><%= currentUser.name %></strong>
              <% if (isAdmin) { %> <span class="badge bg-light text-dark ms-1">Admin</span> <% } %>
            </span>
          </li>
          <li class="nav-item">
            <a class="btn btn-outline-light btn-sm rounded-pill" href="/logout">
              <i class="bi bi-box-arrow-right me-1"></i> Logout
            </a>
          </li>

        <!-- Guest (no login) -->
        <% } else { %>
          <li class="nav-item me-2">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="btn btn-light btn-sm rounded-pill" href="/register">
              <i class="bi bi-person-plus me-1"></i> Sign Up
            </a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<!-- Sticky footer ke liye main wrapper -->
<main class="app-main">
  <div class="container py-4">
    <% if (error) { %>
    <div class="alert alert-danger alert-dismissible fade show app-alert" role="alert">
      <i class="bi bi-exclamation-circle me-2"></i><%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
    <% if (success) { %>
    <div class="alert alert-success alert-dismissible fade show app-alert" role="alert">
      <i class="bi bi-check-circle me-2"></i><%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>