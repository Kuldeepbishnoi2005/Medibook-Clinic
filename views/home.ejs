<%- include('partials/header', { activePage: 'home' }) %>

<div class="hero card border-0 shadow-sm mb-5 hero-card">
  <div class="row align-items-center g-4">
    <div class="col-lg-6">
      <p class="text-primary fw-semibold mb-2 text-uppercase small tracking-wide">
        <i class="bi bi-dot"></i> Book appointments in minutes
      </p>
      <h1 class="hero-title mb-3">
        Find the right doctor for you, <br class="d-none d-md-block" />
        anytime, anywhere.
      </h1>
      <p class="hero-subtitle mb-4">
        Consult top General Physicians, Gynecologists, Dermatologists, Pediatricians,
        Neurologists, Gastroenterologists and more – without waiting in long queues.
      </p>

      <form class="hero-search card p-3 p-md-4 shadow-sm border-0" method="GET" action="/doctors">
        <div class="row g-2 g-md-3 align-items-center">
          <div class="col-12 col-md-5">
            <label class="form-label small text-muted mb-1">Specialty</label>
            <select name="specialty" class="form-select form-select-sm rounded-3">
              <option value="">All Specialties</option>
              <% specialties.forEach(function(s) { %>
                <option value="<%= s.id %>"><%= s.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="col-6 col-md-3">
            <label class="form-label small text-muted mb-1">Preferred Date</label>
            <input type="date" class="form-control form-control-sm rounded-3" />
          </div>
          <div class="col-6 col-md-2">
            <label class="form-label small text-muted mb-1">Time</label>
            <input type="time" class="form-control form-control-sm rounded-3" />
          </div>
          <div class="col-12 col-md-2 d-grid">
            <button type="submit" class="btn btn-primary btn-sm rounded-pill mt-3 mt-md-0">
              <i class="bi bi-search me-1"></i> Find
            </button>
          </div>
        </div>
        <div class="d-flex flex-wrap gap-3 align-items-center mt-3 small text-muted">
          <span><i class="bi bi-patch-check-fill text-success me-1"></i> Verified doctors</span>
          <span><i class="bi bi-clock-fill text-primary me-1"></i> Instant booking</span>
          <span><i class="bi bi-shield-lock-fill text-info me-1"></i> Secure data</span>
        </div>
      </form>
    </div>

    <div class="col-lg-6">
      <div class="hero-visual position-relative">
        <div class="hero-blob"></div>
        <div class="hero-card-main card border-0 shadow">
          <div class="card-body">
            <div class="d-flex align-items-center mb-3">
              <div class="avatar-circle bg-primary-subtle text-primary me-3">
                <i class="bi bi-person-heart"></i>
              </div>
              <div>
                <div class="small text-muted">Next available</div>
                <div class="fw-semibold">Today</div>
              </div>
            </div>
            <ul class="list-unstyled small mb-0">
              <li class="d-flex align-items-center mb-2">
                <i class="bi bi-heart-pulse text-danger me-2"></i>
                <span>Consult top specialists in under 2 minutes</span>
              </li>
              <li class="d-flex align-items-center mb-2">
                <i class="bi bi-calendar-check text-primary me-2"></i>
                <span>Book, reschedule or cancel anytime</span>
              </li>
              <li class="d-flex align-items-center">
                <i class="bi bi-chat-dots text-success me-2"></i>
                <span>Get reminders so you never miss an appointment</span>
              </li>
            </ul>
          </div>
        </div>
        <div class="hero-pills card border-0 shadow-sm">
          <div class="card-body py-2 px-3 small">
            <span class="badge rounded-pill bg-light text-dark me-1 mb-1">
              <i class="bi bi-person-standing-dress me-1 text-primary"></i> Gynecologist
            </span>
            <span class="badge rounded-pill bg-light text-dark me-1 mb-1">
              <i class="bi bi-eye me-1 text-info"></i> Dermatologist
            </span>
            <span class="badge rounded-pill bg-light text-dark me-1 mb-1">
              <i class="bi bi-activity me-1 text-danger"></i> Cardiologist
            </span>
            <span class="badge rounded-pill bg-light text-dark me-1 mb-1">
              <i class="bi bi-capsule-pill me-1 text-success"></i> General Physician
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<section class="mb-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="section-title mb-0">Browse by Specialty</h2>
    <a href="/doctors" class="small text-primary fw-semibold">
      View all doctors <i class="bi bi-arrow-right-short"></i>
    </a>
  </div>
  <div class="row g-3 g-md-4">
    <% specialties.forEach(function(s) { %>
    <div class="col-6 col-md-3 col-lg-3">
      <a href="/doctors?specialty=<%= s.id %>" class="text-decoration-none">
        <div class="specialty-pill card border-0 shadow-sm h-100">
          <div class="card-body d-flex flex-column justify-content-center">
            <div class="d-flex align-items-center">
              <div class="specialty-icon me-2">
                <i class="bi bi-hospital"></i>
              </div>
              <div class="fw-semibold text-dark small"><%= s.name %></div>
            </div>
            <div class="small text-muted mt-2">
              Book trusted <%= s.name %> near you.
            </div>
          </div>
        </div>
      </a>
    </div>
    <% }) %>
  </div>
</section>

<section class="mb-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="section-title mb-0">Top doctors this week</h2>
  </div>
  <div class="row g-3 g-md-4">
    <% doctors.forEach(function(d) { %>
    <div class="col-md-4">
      <div class="card card-doctor h-100 border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex align-items-start justify-content-between mb-3">
            <div class="d-flex align-items-center">
              <div class="avatar-wrapper me-3">
                <% if (d.photo) { %>
                  <div class="avatar-circle">
                    <img src="/uploads/doctors/<%= d.photo %>" alt="<%= d.name %>" class="avatar-img">
                  </div>
                <% } else { %>
                  <div class="avatar-circle bg-primary-subtle text-primary">
                    <span><%= d.name.charAt(0) %></span>
                  </div>
                <% } %>
              </div>
              <div>
                <h5 class="card-title mb-1"><%= d.name %></h5>
                <div class="small text-muted"><%= d.specialty_name %></div>
              </div>
            </div>
          <% if (currentUser) { %>
          <form method="POST" action="/doctors/<%= d.id %>/<%= favoriteDoctorIds && favoriteDoctorIds.includes(d.id) ? 'unfavorite' : 'favorite' %>">
            <button type="submit" class="btn btn-sm btn-link p-0 border-0 favorite-btn"
                    title="<%= favoriteDoctorIds && favoriteDoctorIds.includes(d.id) ? 'Remove from favourites' : 'Add to favourites' %>">
              <% if (favoriteDoctorIds && favoriteDoctorIds.includes(d.id)) { %>
                <i class="bi bi-heart-fill text-danger"></i>
              <% } else { %>
                <i class="bi bi-heart text-muted"></i>
              <% } %>
            </button>
          </form>
          <% } %>
        </div>

          <p class="card-text small text-muted mb-3">
            Experience: <strong><%= d.experience_years %> years</strong><br />
            Fee: <strong>₹<%= d.fee %></strong><br />
            Available:
            <strong><%= d.available_from.toString().slice(0,5) %> - <%= d.available_to.toString().slice(0,5) %></strong>
          </p>
          <div class="d-flex justify-content-between align-items-center">
            <a href="/doctors/<%= d.id %>" class="btn btn-outline-primary btn-sm rounded-pill">
              View Profile
            </a>
            <a href="/doctors/<%= d.id %>/book" class="btn btn-primary btn-sm rounded-pill">
              <i class="bi bi-calendar-plus me-1"></i> Book
            </a>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</section>

<section class="mb-4">
  <h2 class="section-title mb-3">How it works</h2>
  <div class="row g-3 g-md-4">
    <div class="col-md-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <div class="step-icon bg-primary-subtle text-primary mb-3">
            <i class="bi bi-search"></i>
          </div>
          <h6 class="fw-semibold mb-1">1. Search doctors</h6>
          <p class="small text-muted mb-0">
            Browse by specialty, experience and availability to find the right doctor.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <div class="step-icon bg-success-subtle text-success mb-3">
            <i class="bi bi-calendar-event"></i>
          </div>
          <h6 class="fw-semibold mb-1">2. Pick a slot</h6>
          <p class="small text-muted mb-0">
            Choose the date and time that works best for you. Booking takes less than a minute.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <div class="step-icon bg-info-subtle text-info mb-3">
            <i class="bi bi-bell"></i>
          </div>
          <h6 class="fw-semibold mb-1">3. Visit & get reminders</h6>
          <p class="small text-muted mb-0">
            Get reminders and track all your appointments from a single place.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>