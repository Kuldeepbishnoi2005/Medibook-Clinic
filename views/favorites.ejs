<%- include('partials/header', { activePage: 'favorites' }) %>

<h2 class="section-title mb-1">Favourite Doctors</h2>
<p class="small text-muted mb-3">
  Quickly access the doctors you trust the most.
</p>

<div class="row g-3 g-md-4">
  <% if (!doctors.length) { %>
  <div class="col-12">
    <div class="card border-0 shadow-sm">
      <div class="card-body text-center py-4">
        <p class="mb-1">You have not added any favourite doctors yet.</p>
        <a href="/doctors" class="btn btn-primary btn-sm rounded-pill mt-2">
          Find Doctors
        </a>
      </div>
    </div>
  </div>
  <% } %>

  <% doctors.forEach(function(d) { %>
  <div class="col-md-4">
    <div class="card card-doctor h-100 border-0 shadow-sm">
      <div class="card-body d-flex flex-column">
        <div class="d-flex align-items-start justify-content-between mb-3">
          <div class="d-flex align-items-center">
            <div class="avatar-wrapper me-3">
              <% if (d.photo) { %>
                <div class="avatar-circle">
                  <img src="/uploads/doctors/<%= d.photo %>" alt="<%= d.name %>" class="avatar-img">
                </div>
              <% } else { %>
                <div class="avatar-circle bg-primary-subtle text-primary">
                  <span><%= d.name.charAt(0) %></span>
                </div>
              <% } %>
            </div>
            <div>
              <h5 class="card-title mb-1"><%= d.name %></h5>
              <div class="small text-muted"><%= d.specialty_name %></div>
            </div>
          </div>
          <form method="POST" action="/doctors/<%= d.id %>/unfavorite">
            <button type="submit" class="btn btn-sm btn-link p-0 border-0 favorite-btn" title="Remove from favourites">
              <i class="bi bi-heart-fill text-danger"></i>
            </button>
          </form>
        </div>
        <p class="card-text small text-muted mb-3 flex-grow-1">
          Experience: <strong><%= d.experience_years %> yrs</strong><br />
          Fee: <strong>â‚¹<%= d.fee %></strong><br />
          Available:
          <strong><%= d.available_from.toString().slice(0,5) %> - <%= d.available_to.toString().slice(0,5) %></strong>
        </p>
        <div class="d-flex justify-content-between align-items-center">
          <a href="/doctors/<%= d.id %>" class="btn btn-outline-primary btn-sm rounded-pill">
            View Details
          </a>
          <a href="/doctors/<%= d.id %>/book" class="btn btn-primary btn-sm rounded-pill">
            <i class="bi bi-calendar-plus me-1"></i> Book
          </a>
        </div>
      </div>
    </div>
  </div>
  <% }) %>
</div>

<%- include('partials/footer') %>