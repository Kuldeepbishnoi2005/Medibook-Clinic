<%- include('partials/header', { activePage: 'doctors' }) %>

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3 gap-2">
  <div>
    <h2 class="section-title mb-1">Doctors</h2>
    <p class="small text-muted mb-0">
      Browse trusted specialists and book appointments instantly.
    </p>
  </div>
  <form class="d-flex align-items-center gap-2" method="GET" action="/doctors">
    <select name="specialty" class="form-select form-select-sm rounded-pill" onchange="this.form.submit()">
      <option value="">All Specialties</option>
      <% specialties.forEach(function(s) { %>
      <option value="<%= s.id %>" <%= (selectedSpecialtyId == s.id) ? 'selected' : '' %>>
        <%= s.name %>
      </option>
      <% }) %>
    </select>
    <noscript><button class="btn btn-primary btn-sm rounded-pill">Filter</button></noscript>
  </form>
</div>

<div class="row g-3 g-md-4">
  <% if (!doctors.length) { %>
  <div class="col-12">
    <div class="card border-0 shadow-sm">
      <div class="card-body text-center py-4">
        <p class="mb-0 text-muted">No doctors found for the selected specialty.</p>
      </div>
    </div>
  </div>
  <% } %>

  <% doctors.forEach(function(d) { %>
  <div class="col-md-4">
    <div class="card card-doctor h-100 border-0 shadow-sm">
      <div class="card-body d-flex flex-column">
                <div class="d-flex align-items-start justify-content-between mb-3">
          <div class="d-flex align-items-center">
            <div class="avatar-wrapper me-3">
              <% if (d.photo) { %>
                <div class="avatar-circle">
                  <img src="/uploads/doctors/<%= d.photo %>" alt="<%= d.name %>" class="avatar-img">
                </div>
              <% } else { %>
                <div class="avatar-circle bg-primary-subtle text-primary">
                  <span><%= d.name.charAt(0) %></span>
                </div>
              <% } %>
            </div>
            <div>
              <h5 class="card-title mb-1"><%= d.name %></h5>
              <div class="small text-muted"><%= d.specialty_name %></div>
            </div>
          </div>
          <% if (currentUser) { %>
          <form method="POST" action="/doctors/<%= d.id %>/<%= favoriteDoctorIds && favoriteDoctorIds.includes(d.id) ? 'unfavorite' : 'favorite' %>">
            <button type="submit" class="btn btn-sm btn-link p-0 border-0 favorite-btn"
                    title="<%= favoriteDoctorIds && favoriteDoctorIds.includes(d.id) ? 'Remove from favourites' : 'Add to favourites' %>">
              <% if (favoriteDoctorIds && favoriteDoctorIds.includes(d.id)) { %>
                <i class="bi bi-heart-fill text-danger"></i>
              <% } else { %>
                <i class="bi bi-heart text-muted"></i>
              <% } %>
            </button>
          </form>
          <% } %>
        </div>
        <p class="card-text small text-muted mb-3 flex-grow-1">
          Experience: <strong><%= d.experience_years %> yrs</strong><br />
          Fee: <strong>â‚¹<%= d.fee %></strong><br />
          Available:
          <strong><%= d.available_from.toString().slice(0,5) %> - <%= d.available_to.toString().slice(0,5) %></strong>
        </p>
        <div class="d-flex justify-content-between align-items-center">
          <a href="/doctors/<%= d.id %>" class="btn btn-outline-primary btn-sm rounded-pill">
            View Details
          </a>
          <a href="/doctors/<%= d.id %>/book" class="btn btn-primary btn-sm rounded-pill">
            <i class="bi bi-calendar-plus me-1"></i> Book
          </a>
        </div>
      </div>
    </div>
  </div>
  <% }) %>
</div>

<%- include('partials/footer') %>