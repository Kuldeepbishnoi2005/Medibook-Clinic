<%- include('partials/header', { activePage: 'admin-dashboard' }) %>

<h2 class="section-title mb-3">Admin Panel</h2>

<div class="row g-3 g-md-4 mb-4 align-items-center">
  <!-- Left: Greeting + overview -->
  <div class="col-lg-8">
    <div class="card border-0 shadow-sm">
      <div class="card-body p-4">
        <div class="d-flex align-items-center">
          <div class="avatar-circle avatar-lg bg-primary-subtle text-primary me-3">
            <i class="bi bi-shield-lock"></i>
          </div>
          <div>
            <h3 class="mb-1">
              <%= timeGreeting %>,
              <% if (currentUser) { %>
                <%= currentUser.name %>
              <% } else { %>
                Admin
              <% } %>
            </h3>
            <p class="small text-muted mb-0">
              Here is an overview of the entire clinic – patients, doctors and appointments.
            </p>
          </div>
        </div>

        <hr class="my-3" />

        <div class="row g-3 small">
          <div class="col-md-3">
            <div class="d-flex align-items-center">
              <div class="stats-icon bg-primary-subtle text-primary me-2">
                <i class="bi bi-people"></i>
              </div>
              <div>
                <div class="text-muted">Patients</div>
                <div class="fw-semibold fs-5"><%= stats.userCount %></div>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="d-flex align-items-center">
              <div class="stats-icon bg-success-subtle text-success me-2">
                <i class="bi bi-person-badge"></i>
              </div>
              <div>
                <div class="text-muted">Doctors</div>
                <div class="fw-semibold fs-5"><%= stats.doctorCount %></div>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="d-flex align-items-center">
              <div class="stats-icon bg-info-subtle text-info me-2">
                <i class="bi bi-calendar3"></i>
              </div>
              <div>
                <div class="text-muted">Appointments</div>
                <div class="fw-semibold fs-5"><%= stats.appointmentCount %></div>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="d-flex align-items-center">
              <div class="stats-icon bg-warning-subtle text-warning me-2">
                <i class="bi bi-currency-rupee"></i>
              </div>
              <div>
                <div class="text-muted">Online Revenue</div>
                <div class="fw-semibold fs-5">₹<%= stats.paidRevenue %></div>
              </div>
            </div>
          </div>
        </div>

        <div class="row g-3 small mt-2">
          <div class="col-md-4">
            <div class="d-flex align-items-center">
              <div class="stats-icon bg-primary-subtle text-primary me-2">
                <i class="bi bi-calendar-day"></i>
              </div>
              <div>
                <div class="text-muted">Today</div>
                <div class="fw-semibold fs-6"><%= stats.todayCount %> appointments</div>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="d-flex align-items-center">
              <div class="stats-icon bg-info-subtle text-info me-2">
                <i class="bi bi-calendar-event"></i>
              </div>
              <div>
                <div class="text-muted">Upcoming</div>
                <div class="fw-semibold fs-6"><%= stats.upcomingCount %> appointments</div>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="d-flex align-items-center">
              <div class="stats-icon bg-success-subtle text-success me-2">
                <i class="bi bi-check2-circle"></i>
              </div>
              <div>
                <div class="text-muted">Completed</div>
                <div class="fw-semibold fs-6"><%= stats.completedCount %> total</div>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-3 d-flex flex-wrap gap-2">
          <a href="/admin/patients" class="btn btn-primary btn-sm rounded-pill">
            <i class="bi bi-people me-1"></i> Manage Patients
          </a>
          <a href="/admin/doctors" class="btn btn-outline-primary btn-sm rounded-pill">
            <i class="bi bi-person-badge me-1"></i> Manage Doctors
          </a>
          <a href="/admin/appointments" class="btn btn-outline-secondary btn-sm rounded-pill">
            <i class="bi bi-calendar3 me-1"></i> View Appointments
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Right: quick controls -->
  <div class="col-lg-4">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body p-4 small">
        <h6 class="fw-semibold mb-3">Quick controls</h6>
        <ul class="list-unstyled mb-0">
          <li class="d-flex align-items-center mb-3">
            <div class="stats-icon bg-secondary-subtle text-secondary me-2">
              <i class="bi bi-hospital"></i>
            </div>
            <div>
              <div class="fw-semibold mb-0">Manage Specialties</div>
              <div class="text-muted">
                <a href="/admin/specialties">Add or edit medical specialties</a>
              </div>
            </div>
          </li>
          <li class="d-flex align-items-center mb-3">
            <div class="stats-icon bg-info-subtle text-info me-2">
              <i class="bi bi-calendar-x"></i>
            </div>
            <div>
              <div class="fw-semibold mb-0">Clinic Holidays</div>
              <div class="text-muted">
                <a href="/admin/holidays">Set closed days &amp; maintenance</a>
              </div>
            </div>
          </li>
          <li class="d-flex align-items-center">
            <div class="stats-icon bg-dark-subtle text-dark me-2">
              <i class="bi bi-clipboard-data"></i>
            </div>
            <div>
              <div class="fw-semibold mb-0">Activity Logs</div>
              <div class="text-muted">
                <a href="/admin/logs">Review admin &amp; doctor actions</a>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>


<div class="row g-3 g-md-4">
  <!-- Appointments by specialty -->
  <div class="col-md-6">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body">
        <h6 class="fw-semibold mb-3">Top Specialties by Appointments</h6>
        <table class="table table-sm mb-0">
          <thead>
            <tr>
              <th>Specialty</th>
              <th class="text-end">Appointments</th>
            </tr>
          </thead>
          <tbody>
            <% if (!appointmentsBySpecialty.length) { %>
            <tr>
              <td colspan="2" class="small text-muted text-center py-2">No data</td>
            </tr>
            <% } %>
            <% appointmentsBySpecialty.forEach(function(r) { %>
            <tr>
              <td class="small"><%= r.specialty_name %></td>
              <td class="small text-end"><%= r.count %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Recent appointments -->
  <div class="col-md-6">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body">
        <h6 class="fw-semibold mb-3">Recent Appointments</h6>
        <div class="table-responsive">
          <table class="table table-sm mb-0">
            <thead>
              <tr>
                <th>Patient</th>
                <th>Doctor</th>
                <th>Date &amp; Time</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% if (!recentAppointments.length) { %>
              <tr>
                <td colspan="4" class="small text-muted text-center py-2">No recent appointments.</td>
              </tr>
              <% } %>
              <% recentAppointments.forEach(function(a) { %>
              <tr>
                <td class="small"><%= a.user_name %></td>
                <td class="small"><%= a.doctor_name %></td>
                <td class="small">
                  <%= formatDate(a.appointment_date) %>
                  <span class="text-muted">
                    <%= formatTime(a.appointment_time) %>
                  </span>
                </td>
                <td class="small">
                  <% if (a.status === 'confirmed') { %>
                    <span class="text-success fw-semibold"><%= a.status %></span>
                  <% } else if (a.status === 'pending') { %>
                    <span class="text-danger fw-semibold"><%= a.status %></span>
                  <% } else { %>
                    <span class="text-muted"><%= a.status %></span>
                  <% } %>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>